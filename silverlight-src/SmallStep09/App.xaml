<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             x:Class="SmallStep09.App">
    <Application.Resources>
        
        <Style x:Key="BlueStoneText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Assets/BlueStone.ttf#BlueStone" />
            <Setter Property="Foreground" Value="#051E21" />
        </Style>

        <Style x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#051E21" />
        </Style>

    </Application.Resources>
</Application>
